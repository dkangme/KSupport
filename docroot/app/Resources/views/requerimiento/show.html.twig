{% extends 'base.html.twig' %}

{% block body %}
    <h1>Requerimiento</h1>

    <table>
        <tbody>
            <tr>
                <th>Timestampapertura</th>
                <td>{% if requerimiento.timestampApertura %}{{ requerimiento.timestampApertura|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Timestampcierre</th>
                <td>{% if requerimiento.timestampCierre %}{{ requerimiento.timestampCierre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ requerimiento.estado }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ requerimiento.descripcion }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ requerimiento.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('data_requerimiento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('data_requerimiento_edit', { 'id': requerimiento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
