{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bitacora</h1>

    <table>
        <tbody>
            <tr>
                <th>Timestamp</th>
                <td>{% if bitacora.timestamp %}{{ bitacora.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Evento</th>
                <td>{{ bitacora.evento }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ bitacora.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('data_bitacora_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('data_bitacora_edit', { 'id': bitacora.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
