{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tipo</h1>

    <table>
        <tbody>
            <tr>
                <th>Descripcion</th>
                <td>{{ tipo.descripcion }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ tipo.costo }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ tipo.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('data_tipo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('data_tipo_edit', { 'id': tipo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
